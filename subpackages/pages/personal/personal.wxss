.personal {
  width: 100%;
  padding-bottom: 220rpx;
}

/* 头部 s */

.personal .head {
  width: 100%;
  position: relative;
  z-index: 10;
}

.personal .head image.head-title {
  position: absolute;
  width: 278rpx;
  left: 55rpx;
  top: 63rpx;
  z-index: 1;
}
.personal .head image.head-bg {
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.personal .head .avator {
  padding-top: 160rpx;
  text-align: center;
}

.personal .head .avator > view {
  display: inline-block;
  width: 172rpx;
  height: 172rpx;
  border: 4rpx solid #fff;
  border-radius: 86rpx;
  overflow: hidden;
  animation: loadCircle 2s  linear both;
}
@keyframes loadCircle {
  0% {
    opacity: 1;
  }
  8.3% {
    opacity: 0;
  }
  50% {
    opacity: 1;
  }
  100% {
    opacity: 1;
  }
}
.personal .head .avator > view image {
  width: 172rpx;
  height: 172rpx;
}

.personal .head .describ {
  color: #fff;
}

.personal .head .describ > view {
  text-align: center;
}

.personal .head .describ > view:first-child {
  font-size: 32rpx;
}

.personal .head .describ > view:nth-child(2) {
  font-size: 24rpx;
}

.personal .head .describ > view:nth-child(3) {
  font-size: 14rpx;
}

.personal .head .describ > view .progress {
  display: inline-block;
  width: 150rpx;
  height: 14rpx;
  border-radius: 7rpx;
  background-color: #fff;
  position: relative;
}

.personal .head .describ > view .progress::before {
  content: '';
  position: absolute;
  height: 14rpx;
  width: 0;
  left: 0;
  top: 0;
  border-radius: 7rpx;
  background-image: linear-gradient(to right, #39a032, #0294c8);
  transition: width 0.6s ease-in-out;
}

.personal .head .describ > view .progress.active::before {
  width: 60%;
}

/* 头部 e */

.personal .card {
  margin: 90rpx 0 50rpx 0;
  height: 190rpx;
  text-align: center;
  position: relative;
  z-index: 8;
  top: -330rpx;
}
.personal .card > view {
  display: inline-block;
  width: 685rpx;
  padding: 6rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 6rpx 0 rgba(0, 0, 0, .3);
}
.personal .card > view > image {
  width: 100%;
}

.personal .card .card-list {
  display: flex;
  font-size: 24rpx;
  color: #727171;
  justify-content: center;
  margin-top: 16rpx;
  padding-bottom: 20rpx;
}

.personal .card .card-list .key image, .personal .card .card-list .friend image {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}

.personal .card .card-list .key {
  width: 50%;
}

.personal .card .card-list .friend {
  width: 50%;
}
.personal .card .card-list .friend button{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
}
.personal .card .card-list .line {
  width: 2rpx;
  height: 40rpx;
  background-color: #73ccdd;
}

.personal .card .card-list text {
  vertical-align: middle;
  margin-left: 8rpx;
}

